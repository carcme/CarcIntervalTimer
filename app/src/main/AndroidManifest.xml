<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.carc.intervaltimer">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="me.carc.intervaltimer.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="me.carc.intervaltimer.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="me.carc.intervaltimer.settings.SettingsActivity"
                  android:label="@string/app_settings_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/SettingsTheme">
        </activity>

        <service android:name="me.carc.intervaltimer.services.VibrateService"/>

    </application>

</manifest>
